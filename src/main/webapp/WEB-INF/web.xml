<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SanPham</servlet-name>
        <servlet-class>model.SanPham</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TheLoai</servlet-name>
        <servlet-class>model.TheLoai</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>giayDao</servlet-name>
        <servlet-class>dao.SanPhamDao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>laoiDao</servlet-name>
        <servlet-class>dao.laoiDao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>controller.home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productServlet</servlet-name>
        <servlet-class>controller.productServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SanPham</servlet-name>
        <url-pattern>/SanPham</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TheLoai</servlet-name>
        <url-pattern>/TheLoai</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>giayDao</servlet-name>
        <url-pattern>/giayDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>laoiDao</servlet-name>
        <url-pattern>/laoiDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productServlet</servlet-name>
        <url-pattern>/productServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>
            home.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
